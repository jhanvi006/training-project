{% include 'header.html.twig' %}
<!DOCTYPE html>
<html>
    <head>
        <title>
            Reset Password
        </title>
    </head>
    <body>
        {% for error in errors %}
            {{ error }}
            {{ "\n"|nl2br }}
        {% endfor %}
        <form method="post" action="change_password.php">   

            <div>
                <div>
                    <p>{{ "Old Password:" }}
                        <input type="{{ type|default('password') }}" name="{{ 'old_password' }}"  />
                    </p>
                </div>
            </div>

            <div>
                <div>
                    <p>{{ "New Password:" }}
                        <input type="{{ type|default('password') }}" name="{{ 'new_password' }}"  />
                    </p>
                </div>
            </div>

            <div>
                <div>
                    <p>{{ "Confirm new Password:" }}
                        <input type="{{ type|default('password') }}" name="{{ 'conf_password' }}"  />
                    </p>
                </div>
            </div>

            <div>
                <div>
                    <input type="{{ type|default('submit') }}" name="{{ 'edit-password' }}" value="{{ 'Edit' }}" />
                </div>
            </div>
        </form>
    </body>
</html>
