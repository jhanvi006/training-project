<!DOCTYPE html>
<html>
    <head>
        <title>
            Reset Password
        </title>
    </head>
    <body>
        {% for error in errors %}
            {{ error }}
            {{ "\n"|nl2br }}
        {% endfor %}
        <form method="post" action="reset_password.php">    
            <div>
                <div>
                    <p>{{ "New Password:" }}
                        <input type="{{ type|default('password') }}" name="{{ 'password' }}"  />
                    </p>
                </div>
            </div>

            <div>
                <div>
                    <p>{{ "Confirm new Password:" }}
                        <input type="{{ type|default('password') }}" name="{{ 'conf_password' }}"  />
                    </p>
                </div>
            </div>

            <div>
                <div>
                    <input type="{{ type|default('submit') }}" name="{{ 'new-password' }}" value="{{ 'Reset' }}" />
                </div>
            </div>
        </form>
    </body>
</html>
